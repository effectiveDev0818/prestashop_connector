<openerp>
    <data>
    
        <!-- INHERITED VIEW FOR THE OBJECT : external.referential -->

        <record id="presta_external_referential_view_form" model="ir.ui.view">
            <field name="name">prestashoperpconnect.external.referential.view.form</field>
            <field name="model">external.referential</field>
            <field name="inherit_id" ref="base_external_referentials.external_referential_form_view" />
            <field eval="20" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/group/notebook/page/group/group[@name='left']/.." position="after">
                        <group name="export" colspan="4" col="4" >
                            <separator string="Exports" colspan="4" />
                            <button name="export_product_attributes" string="1 - Export Product Attributes" colspan="2" type="object" />
                            <field name="last_product_attributes_export_date" colspan="2"/>
                        </group>
                    </xpath>
                    <xpath expr="/form/group/notebook/page[@string='CSV file generation']" position="after">
                        <page string="Configuration">
                            <separator string="Active languages" colspan="4" />
                            <field name="active_language_ids" nolabel="1"/>
                            <separator string="Product Attributes" colspan="4" />
                            <field name="product_attribute_ids" nolabel="1" />
                        </page>
                    </xpath>
                    <xpath expr="/form/field/form/group/field[@name='external_resource_name']" position="after">
                        <field name="prestashop_primary_key"/>
                    </xpath>
                </data>
            </field>
        </record>


