<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--This is a product inherited form that will be dynamically populated-->
        <record id="product_normal_form_view" model="ir.ui.view">
           <field name="model">product.product</field>
           <field name="inherit_id" ref="connector_ecommerce.product_normal_form_view" />
           <field name="arch" type="xml">
               <page name="connector" position="attributes">
                    <attribute name="invisible">0</attribute>
               </page>
               <page name="connector" position="inside">
                    <group string="Prestashop Bindings">
                        <field name="prestashop_bind_ids" nolabel="1"/>
                    </group>
               </page>
           </field>
        </record>

        <record id="product_connector_presta_form_view" model="ir.ui.view">
           <field name="model">prestashop.product.product</field>
           <field name="arch" type="xml">
                <form string="prestashop fields" version="7.0">
                    <group col="1">
                        <field name="backend_id"/>
                        <field name="default_shop_id"/>
                        <field name="link_rewrite"/>
                        <field name="description_html"/>
                    </group>
                    <group col="4" colspan="4">
                        <field name="date_add"/>
                        <field name="date_upd"/>
                        <field name="sale_ok"/>
                        <field name="quantity" string="qty"/>
                        <field name="always_available"/>
                    </group>
                </form>
           </field>
        </record>

        <record id="product_connector_presta_tree_view" model="ir.ui.view">
            <field name="model">prestashop.product.product</field>
            <field name="arch" type="xml">
                <tree string="prestashop product" version="7.0">
                    <field name="backend_id" string="Backend"/>
                    <field name="date_add"/>
                    <field name="date_upd"/>
                    <field name="quantity"/>
                    <field name="prestashop_id"/>
                    <field name="sale_ok"/>
                    <field name="always_available"/>
                </tree>
            </field>
        </record>


    </data>
</openerp>
