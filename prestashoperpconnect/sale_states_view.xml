<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_order_states_form" model="ir.ui.view">
            <field name="name">sale.order.state</field>
            <field name="model">sale.order.state</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sales order state">
                    <field name="name"/>
                    <field name="template"/>
                </form>
            </field>
        </record>
        <record id="view_order_states_tree" model="ir.ui.view">
            <field name="name">sale.order.state</field>
            <field name="model">sale.order.state</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Sales order state">
                    <field name="name"/>
                    <field name="template"/>
                </tree>
            </field>
        </record>

        <record id="action_order_states_form" model="ir.actions.act_window">
            <field name="name">Sales order state</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.state</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_order_states_tree"/>
            <field name="help">States of your orders in prestashop</field>
        </record>

        <menuitem action="action_order_states_form" id="menu_action_order_states_form" parent="base.menu_sale_config_sales" sequence="1"/>
        
		<record id="view_order_history_form" model="ir.ui.view">
            <field name="name">sale.order.history</field>
            <field name="model">sale.order.history</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sales order history">
                    <field name="order_id"/>
                    <field name="state_id"/>
                    <field name="date_add"/>
                </form>
            </field>
        </record>
        <record id="view_order_history_tree" model="ir.ui.view">
            <field name="name">sale.order.history</field>
            <field name="model">sale.order.history</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Sales order history">
                    <field name="order_id"/>
                    <field name="state_id"/>
                    <field name="date_add"/>
                </tree>
            </field>
        </record>

        <record id="action_order_history_form" model="ir.actions.act_window">
            <field name="name">Sales order history</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_order_history_tree"/>
            <field name="help">States of your orders in prestashop</field>
        </record>

        <menuitem action="action_order_history_form" id="menu_action_order_history_form" parent="base.menu_sale_config_sales" sequence="2"/>
        
        <record id="external_referential_form_with_states_view" model="ir.ui.view">
			<field name="name">external.referetial</field>
			<field name="model">external.referential</field>
			<field name="inherit_id" ref="base_external_referentials.external_referential_form_view" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<button name="import_referentials" position="after">
					<button name="sync_order_state" string="3 - Synchronize Order States" colspan="2" type="object"/>
				</button>
			</field>
		</record>
			
    </data>
</openerp>
